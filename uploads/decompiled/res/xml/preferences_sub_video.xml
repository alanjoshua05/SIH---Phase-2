<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:key="preferences_root"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference android:key="preference_video_quality" android:summary="%s" />
    <SwitchPreference android:title="@string/preference_video_stabilization" android:key="preference_video_stabilization" android:summary="@string/preference_video_stabilization_summary" android:defaultValue="false" />
    <ListPreference android:entries="@array/preference_video_output_format_entries" android:title="@string/preference_video_output_format" android:key="preference_video_output_format" android:summary="@string/preference_video_output_format_summary" android:defaultValue="preference_video_output_format_default" android:entryValues="@array/preference_video_output_format_values" />
    <ListPreference android:entries="@array/preference_video_log_entries" android:title="@string/preference_video_log" android:key="preference_video_log" android:summary="@string/preference_video_log_summary" android:defaultValue="off" android:entryValues="@array/preference_video_log_values" />
    <net.sourceforge.opencamera.ui.ArraySeekBarPreference android:entries="@array/preference_video_profile_gamma_entries" android:title="@string/preference_video_profile_gamma" android:key="preference_video_profile_gamma" android:summary="@string/preference_video_profile_gamma_summary" android:defaultValue="2.2" android:entryValues="@array/preference_video_profile_gamma_values" />
    <ListPreference android:entries="@array/preference_video_max_duration_entries" android:title="@string/preference_video_max_duration" android:key="preference_video_max_duration" android:summary="@string/preference_video_max_duration_summary" android:defaultValue="0" android:entryValues="@array/preference_video_max_duration_values" />
    <ListPreference android:entries="@array/preference_video_restart_entries" android:title="@string/preference_video_restart" android:key="preference_video_restart" android:summary="@string/preference_video_restart_summary" android:defaultValue="0" android:entryValues="@array/preference_video_restart_values" />
    <ListPreference android:entries="@array/preference_video_max_filesize_entries" android:title="@string/preference_video_max_filesize" android:key="preference_video_max_filesize" android:summary="@string/preference_video_max_filesize_summary" android:defaultValue="0" android:entryValues="@array/preference_video_max_filesize_values" />
    <SwitchPreference android:title="@string/preference_video_restart_max_filesize" android:key="preference_video_restart_max_filesize" android:summary="@string/preference_video_restart_max_filesize_summary" android:defaultValue="true" />
    <SwitchPreference android:title="@string/preference_record_audio" android:key="preference_record_audio" android:summary="@string/preference_record_audio_summary" android:defaultValue="true" />
    <ListPreference android:entries="@array/preference_record_audio_src_entries" android:title="@string/preference_record_audio_src" android:key="preference_record_audio_src" android:summary="@string/preference_record_audio_src_summary" android:dependency="preference_record_audio" android:defaultValue="audio_src_camcorder" android:entryValues="@array/preference_record_audio_src_values" />
    <ListPreference android:entries="@array/preference_record_audio_channels_entries" android:title="@string/preference_record_audio_channels" android:key="preference_record_audio_channels" android:summary="@string/preference_record_audio_channels_summary" android:dependency="preference_record_audio" android:defaultValue="audio_default" android:entryValues="@array/preference_record_audio_channels_values" />
    <SwitchPreference android:title="@string/preference_lock_video" android:key="preference_lock_video" android:summary="@string/preference_lock_video_summary" android:defaultValue="false" />
    <ListPreference android:entries="@array/preference_video_subtitle_entries" android:title="@string/preference_video_subtitle" android:key="preference_video_subtitle" android:summary="@string/preference_video_subtitle_summary" android:defaultValue="preference_video_subtitle_no" android:entryValues="@array/preference_video_subtitle_values" />
    <PreferenceCategory android:title="@string/preference_category_video_debugging" android:key="preference_category_video_debugging">
        <ListPreference android:entries="@array/preference_video_bitrate_entries" android:title="@string/preference_video_bitrate" android:key="preference_video_bitrate" android:summary="@string/preference_video_bitrate_summary" android:defaultValue="default" android:entryValues="@array/preference_video_bitrate_values" />
        <ListPreference android:title="@string/preference_video_fps" android:key="preference_video_fps" android:summary="@string/preference_video_fps_summary" android:defaultValue="default" />
        <SwitchPreference android:title="@string/preference_force_video_4k" android:key="preference_force_video_4k" android:summary="@string/preference_force_video_4k_summary" android:defaultValue="false" />
        <SwitchPreference android:title="@string/preference_video_low_power_check" android:key="preference_video_low_power_check" android:summary="@string/preference_video_low_power_check_summary" android:defaultValue="true" />
        <SwitchPreference android:title="@string/preference_video_flash" android:key="preference_video_flash" android:summary="@string/preference_video_flash_summary" android:defaultValue="false" />
    </PreferenceCategory>
</PreferenceScreen>