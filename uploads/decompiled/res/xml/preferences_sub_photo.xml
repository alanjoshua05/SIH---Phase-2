<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:key="preferences_root"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference android:icon="@drawable/ic_photo_size_select_large_white_48dp" android:title="@string/preference_resolution" android:key="preference_resolution" android:summary="%s" />
    <net.sourceforge.opencamera.ui.ArraySeekBarPreference android:title="@string/preference_quality" android:key="preference_quality" android:summary="@string/preference_quality_summary" android:defaultValue="90" />
    <ListPreference android:entries="@array/preference_image_format_entries" android:title="@string/preference_image_format" android:key="preference_image_format" android:summary="@string/preference_image_format_summary" android:defaultValue="preference_image_format_jpeg" android:entryValues="@array/preference_image_format_values" />
    <ListPreference android:entries="@array/preference_raw_entries" android:title="@string/preference_raw" android:key="preference_raw" android:summary="%s" android:defaultValue="preference_raw_no" android:entryValues="@array/preference_raw_values" />
    <SwitchPreference android:title="@string/preference_raw_expo_bracketing" android:key="preference_raw_expo_bracketing" android:summary="@string/preference_raw_expo_bracketing_summary" android:defaultValue="true" />
    <SwitchPreference android:title="@string/preference_raw_focus_bracketing" android:key="preference_raw_focus_bracketing" android:summary="@string/preference_raw_focus_bracketing_summary" android:defaultValue="true" />
    <ListPreference android:entries="@array/preference_nr_save_entries" android:title="@string/preference_nr_save" android:key="preference_nr_save" android:summary="@string/preference_nr_save_summary" android:defaultValue="preference_nr_save_no" android:entryValues="@array/preference_nr_save_values" />
    <SwitchPreference android:title="@string/preference_hdr_save_expo" android:key="preference_hdr_save_expo" android:summary="@string/preference_hdr_save_expo_summary" android:defaultValue="false" />
    <ListPreference android:entries="@array/preference_hdr_tonemapping_entries" android:title="@string/preference_hdr_tonemapping" android:key="preference_hdr_tonemapping" android:summary="@string/preference_hdr_tonemapping_summary" android:defaultValue="preference_hdr_tonemapping_default" android:entryValues="@array/preference_hdr_tonemapping_values" />
    <ListPreference android:entries="@array/preference_hdr_contrast_enhancement_entries" android:title="@string/preference_hdr_contrast_enhancement" android:key="preference_hdr_contrast_enhancement" android:summary="@string/preference_hdr_contrast_enhancement_summary" android:defaultValue="preference_hdr_contrast_enhancement_smart" android:entryValues="@array/preference_hdr_contrast_enhancement_values" />
    <ListPreference android:entries="@array/preference_expo_bracketing_n_images_entries" android:title="@string/preference_expo_bracketing_n_images" android:key="preference_expo_bracketing_n_images" android:summary="@string/preference_expo_bracketing_n_images_summary" android:defaultValue="3" android:entryValues="@array/preference_expo_bracketing_n_images_values" />
    <ListPreference android:entries="@array/preference_expo_bracketing_stops_entries" android:title="@string/preference_expo_bracketing_stops" android:key="preference_expo_bracketing_stops" android:summary="@string/preference_expo_bracketing_stops_summary" android:defaultValue="2" android:entryValues="@array/preference_expo_bracketing_stops_values" />
    <ListPreference android:entries="@array/preference_panorama_crop_entries" android:title="@string/preference_panorama_crop" android:key="preference_panorama_crop" android:summary="@string/preference_panorama_crop_summary" android:defaultValue="preference_panorama_crop_on" android:entryValues="@array/preference_panorama_crop_values" />
    <ListPreference android:entries="@array/preference_panorama_save_entries" android:title="@string/preference_panorama_save" android:key="preference_panorama_save" android:summary="@string/preference_panorama_save_summary" android:defaultValue="preference_panorama_save_no" android:entryValues="@array/preference_panorama_save_values" />
    <ListPreference android:entries="@array/preference_front_camera_mirror_entries" android:title="@string/preference_front_camera_mirror" android:key="preference_front_camera_mirror" android:summary="@string/preference_front_camera_mirror_summary" android:defaultValue="preference_front_camera_mirror_no" android:entryValues="@array/preference_front_camera_mirror_values" />
    <ListPreference android:entries="@array/preference_remove_device_exif_entries" android:title="@string/preference_remove_device_exif" android:key="preference_remove_device_exif" android:summary="@string/preference_remove_device_exif_summary" android:defaultValue="preference_remove_device_exif_off" android:entryValues="@array/preference_remove_device_exif_values" />
    <PreferenceCategory android:title="@string/preference_category_exif_tags" android:key="preference_category_exif_tags">
        <net.sourceforge.opencamera.ui.MyEditTextPreference android:title="@string/preference_exif_artist" android:key="preference_exif_artist" android:summary="@string/preference_exif_artist_summary" android:defaultValue="" android:dialogMessage="@string/preference_exif_artist_summary" android:inputType="text" />
        <net.sourceforge.opencamera.ui.MyEditTextPreference android:title="@string/preference_exif_copyright" android:key="preference_exif_copyright" android:summary="@string/preference_exif_copyright_summary" android:defaultValue="" android:dialogMessage="@string/preference_exif_copyright_summary" android:inputType="text" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/preference_category_stamp" android:key="preference_category_stamp">
        <ListPreference android:icon="@drawable/ic_text_format_white_48dp" android:entries="@array/preference_stamp_entries" android:title="@string/preference_stamp" android:key="preference_stamp" android:summary="@string/preference_stamp_summary" android:defaultValue="preference_stamp_no" android:entryValues="@array/preference_stamp_values" />
        <ListPreference android:entries="@array/preference_stamp_dateformat_entries" android:title="@string/preference_stamp_dateformat" android:key="preference_stamp_dateformat" android:summary="%s" android:defaultValue="preference_stamp_dateformat_default" android:entryValues="@array/preference_stamp_dateformat_values" />
        <ListPreference android:entries="@array/preference_stamp_timeformat_entries" android:title="@string/preference_stamp_timeformat" android:key="preference_stamp_timeformat" android:summary="%s" android:defaultValue="preference_stamp_timeformat_default" android:entryValues="@array/preference_stamp_timeformat_values" />
        <ListPreference android:entries="@array/preference_stamp_gpsformat_entries" android:title="@string/preference_stamp_gpsformat" android:key="preference_stamp_gpsformat" android:summary="%s" android:defaultValue="preference_stamp_gpsformat_default" android:entryValues="@array/preference_stamp_gpsformat_values" />
        <ListPreference android:entries="@array/preference_units_distance_entries" android:title="@string/preference_units_distance" android:key="preference_units_distance" android:summary="@string/preference_units_distance_summary" android:defaultValue="preference_units_distance_m" android:entryValues="@array/preference_units_distance_values" />
        <net.sourceforge.opencamera.ui.MyEditTextPreference android:title="@string/preference_textstamp" android:key="preference_textstamp" android:summary="@string/preference_textstamp_summary" android:defaultValue="" android:dialogMessage="@string/preference_textstamp_summary" android:inputType="text" />
        <net.sourceforge.opencamera.ui.ArraySeekBarPreference android:entries="@array/preference_stamp_fontsize_entries" android:title="@string/preference_stamp_fontsize" android:key="preference_stamp_fontsize" android:summary="@string/preference_stamp_fontsize_summary" android:defaultValue="12" android:entryValues="@array/preference_stamp_fontsize_values" />
        <ListPreference android:entries="@array/preference_angle_highlight_color_entries" android:title="@string/preference_stamp_font_color" android:key="preference_stamp_font_color" android:summary="@string/preference_stamp_font_color_summary" android:defaultValue="\#ffffff" android:entryValues="@array/preference_angle_highlight_color_values" />
        <ListPreference android:entries="@array/preference_stamp_style_entries" android:title="@string/preference_stamp_style" android:key="preference_stamp_style" android:summary="@string/preference_stamp_style_summary" android:defaultValue="preference_stamp_style_shadowed" android:entryValues="@array/preference_stamp_style_values" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/preference_category_photo_debugging" android:key="preference_category_photo_debugging">
        <SwitchPreference android:title="@string/preference_camera2_fake_flash" android:key="preference_camera2_fake_flash" android:summary="@string/preference_camera2_fake_flash_summary" android:defaultValue="false" />
        <SwitchPreference android:title="@string/preference_camera2_dummy_capture_hack" android:key="preference_camera2_dummy_capture_hack" android:summary="@string/preference_camera2_dummy_capture_hack_summary" android:defaultValue="false" />
        <SwitchPreference android:title="@string/preference_camera2_fast_burst" android:key="preference_camera2_fast_burst" android:summary="@string/preference_camera2_fast_burst_summary" android:defaultValue="true" />
        <SwitchPreference android:title="@string/preference_camera2_photo_video_recording" android:key="preference_camera2_photo_video_recording" android:summary="@string/preference_camera2_photo_video_recording_summary" android:defaultValue="true" />
    </PreferenceCategory>
</PreferenceScreen>