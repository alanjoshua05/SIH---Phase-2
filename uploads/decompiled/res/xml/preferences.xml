<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/preference_category_camera_controls" android:key="preference_category_camera_controls">
        <SwitchPreference android:title="@string/preference_face_detection" android:key="preference_face_detection" android:summary="@string/preference_face_detection_summary" android:defaultValue="false" />
        <ListPreference android:icon="@drawable/ic_timer_white_48dp" android:entries="@array/preference_timer_entries" android:title="@string/preference_timer" android:key="preference_timer" android:summary="%s" android:defaultValue="0" android:entryValues="@array/preference_timer_values" />
        <ListPreference android:entries="@array/preference_burst_mode_entries" android:title="@string/preference_burst_mode" android:key="preference_burst_mode" android:summary="%s" android:defaultValue="1" android:entryValues="@array/preference_burst_mode_values" />
        <ListPreference android:entries="@array/preference_burst_interval_entries" android:title="@string/preference_burst_interval" android:key="preference_burst_interval" android:summary="%s" android:defaultValue="0" android:entryValues="@array/preference_burst_interval_values" />
        <PreferenceScreen android:icon="@drawable/ic_more_horiz_white_48dp" android:persistent="false" android:title="@string/preference_screen_camera_controls_more" android:key="preference_screen_camera_controls_more" android:fragment="net.sourceforge.opencamera.PreferenceSubCameraControlsMore" />
        <PreferenceScreen android:icon="@drawable/ic_more_horiz_white_48dp" android:persistent="false" android:title="@string/preference_preview" android:key="preference_preview" android:fragment="net.sourceforge.opencamera.PreferenceSubPreview" />
        <PreferenceScreen android:icon="@drawable/ic_more_horiz_white_48dp" android:persistent="false" android:title="@string/preference_screen_gui" android:key="preference_screen_gui" android:fragment="net.sourceforge.opencamera.PreferenceSubGUI" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/preference_category_camera_quality" android:key="preference_category_camera_quality">
        <PreferenceScreen android:icon="@drawable/take_photo_pref" android:persistent="false" android:title="@string/preference_screen_photo_settings" android:key="preference_screen_photo_settings" android:fragment="net.sourceforge.opencamera.PreferenceSubPhoto" />
        <PreferenceScreen android:icon="@drawable/take_video_pref" android:persistent="false" android:title="@string/preference_screen_video_settings" android:key="preference_screen_video_settings" android:fragment="net.sourceforge.opencamera.PreferenceSubVideo" />
        <PreferenceScreen android:icon="@drawable/ic_gps_fixed_white_48dp" android:persistent="false" android:title="@string/preference_screen_location_settings" android:key="preference_screen_location_settings" android:fragment="net.sourceforge.opencamera.PreferenceSubLocation" />
        <PreferenceScreen android:icon="@drawable/ic_more_horiz_white_48dp" android:persistent="false" android:title="@string/preference_screen_processing_settings" android:key="preference_screen_processing_settings" android:fragment="net.sourceforge.opencamera.PreferenceSubProcessing" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/preference_category_online" android:key="preference_category_online">
        <Preference android:icon="@drawable/ic_help_outline_white_48dp" android:title="@string/preference_online_help" android:key="preference_online_help" android:summary="@string/preference_online_help_summary" />
        <ListPreference android:title="@string/preference_camera_api" android:key="preference_camera_api" android:summary="@string/preference_camera_api_summary" />
        <Preference android:icon="@drawable/ic_info_outline_white_48dp" android:title="@string/preference_about" android:key="preference_about" android:summary="@string/preference_about_summary" />
        <Preference android:icon="@drawable/ic_info_outline_white_48dp" android:title="@string/preference_privacy_policy" android:key="preference_privacy_policy" android:summary="@string/preference_privacy_policy_summary" />
        <PreferenceScreen android:icon="@drawable/ic_info_outline_white_48dp" android:persistent="false" android:title="@string/preference_screen_licences" android:key="preference_screen_licences" android:fragment="net.sourceforge.opencamera.PreferenceSubLicences" />
        <PreferenceScreen android:icon="@drawable/settings" android:persistent="false" android:title="@string/preference_screen_settings_manager" android:key="preference_screen_settings_manager" android:fragment="net.sourceforge.opencamera.PreferenceSubSettingsManager" />
    </PreferenceCategory>
</PreferenceScreen>